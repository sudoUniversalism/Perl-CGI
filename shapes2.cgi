#!/usr/bin/perl
use CGI::Carp qw(fatalsToBrowser);
use GD::Simple;
use GD::Polygon;
print ("Content-type: image/jpeg\n\n");
$img=GD::Simple->new(600,600);
$img->bgcolor('red');
$img->fgcolor('blue');
$img->rectangle(50,50,100,100);
$img->moveTo(500,500);
$img->bgcolor(undef);
$img->fgcolor('green');
$img->ellipse(50,100);
$img->moveTo(80,80);
$img->lineTo(100,190);
$img->moveTo(200,200);
$img->bgcolor('black');
$img->fgcolor('black');
$img->arc(150,300,0,90,100,200);
$poly = new GD::Polygon;
$poly->addPt(310,280);
$poly->addPt(380,200);
$poly->addPt(410,280);
$poly->addPt(400,400);
$img->bgcolor('cyan');
$img->fgcolor('blue');
$img->penSize(1,1);
$img->polygon($poly);
print $img->png;
